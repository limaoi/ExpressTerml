<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorWhite"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/ic_back_left_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="提现"
                android:textColor="@color/color_666666"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_tx_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tl_toolbar"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_account_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="户名"
                android:textColor="@color/color_666666"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_account_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_account_name"
                android:text="*"
                android:textColor="@color/color_999999" />

        </RelativeLayout>

        <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/rl_account_name"
            android:background="@color/color_dadada" />


        <RelativeLayout
            android:id="@+id/rl_account_card"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view_2"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_account_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="卡号"
                android:textColor="@color/color_666666"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_account_card_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_account_card"
                android:text="xxxx-xxxx-xxxx-xxxx-xxx"
                android:textColor="@color/color_999999" />

        </RelativeLayout>

        <View
            android:id="@+id/view_3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/rl_account_card"
            android:background="@color/color_dadada" />


        <RelativeLayout
            android:id="@+id/rl_account_bank"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view_3"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_account_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="开户行"
                android:textColor="@color/color_666666"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_account_bank_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_account_bank"
                android:text="*"
                android:textColor="@color/color_999999" />

        </RelativeLayout>

        <View
            android:id="@+id/view_4"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/rl_account_bank"
            android:background="@color/color_dadada" />


        <RelativeLayout
            android:id="@+id/rl_account_bank_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view_4"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_account_bank_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="开户地址"
                android:textColor="@color/color_666666"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_account_bank_address_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_account_bank_address"
                android:text="*"
                android:textColor="@color/color_999999" />

        </RelativeLayout>

        <View
            android:id="@+id/view_5"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/rl_account_bank_address"
            android:background="@color/color_dadada" />

        <RelativeLayout
            android:id="@+id/rl_wallet"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/view_5"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_withdrawals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="提现金额（元）"
                android:textColor="@color/color_666666"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/tv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_withdrawals"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="¥"
                android:textColor="@color/color_333333"
                android:textSize="40dp" />


            <EditText
                android:id="@+id/et_balance_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_withdrawals"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/iv_delete"
                android:layout_toRightOf="@+id/tv_icon"
                android:background="@null"
                android:inputType="number"
                android:textSize="40dp" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="35dp"
                android:layout_marginRight="22dp"
                android:src="@mipmap/ic_delete" />

        </RelativeLayout>


        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/rl_wallet"
            android:background="@color/color_dadada" />

        <RelativeLayout
            android:id="@+id/rl_all_withdrawals"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/view_1"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_available_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="可用余额"
                android:textColor="@color/color_dadada"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_available_balance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/tv_available_balance"
                android:text="--.--"
                android:textColor="@color/color_dadada"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_all_withdrawals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="全部提现"
                android:textColor="@color/color_666666"
                android:textSize="20dp" />

        </RelativeLayout>

