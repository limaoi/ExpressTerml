<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorWhite"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/ic_back_left_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="充值"
                android:textColor="@color/color_666666"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rl_sender_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/tl_toolbar"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite">


        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="金额（元）"
            android:maxLines="1"
            android:textColorHint="@color/color_666666"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/tv_balance"
            android:background="@null"
            android:hint="请输入你要充值的金额"
            android:inputType="number"
            android:maxLines="1"
            android:textColorHint="@color/color_dadada"
            android:textSize="18dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_alipay"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/rl_sender_name"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_alipay" />

        <TextView
            android:id="@+id/tv_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_alipay"
            android:text="支付宝充值"
            android:textColor="@color/color_666666"
            android:textSize="17dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_alipay"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_alipay"
            android:text="推荐已安装支付宝的用户使用"
            android:textColor="@color/color_dadada"
            android:textSize="17dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_back_right_gray" />

    </RelativeLayout>


    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_alipay"
        android:background="@color/color_dadada" />

    <RelativeLayout
        android:id="@+id/rl_weChat_recharge"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/view_1"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_weChat_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_wechat" />

        <TextView
            android:id="@+id/tv_weChat_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_weChat_recharge"
            android:text="微信充值"
            android:textColor="@color/color_666666"
            android:textSize="17dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_weChat_recharge"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_weChat_recharge"
            android:text="推荐已安装微信的用户使用"
            android:textColor="@color/color_dadada"
            android:textSize="17dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_back_right_gray" />

    </RelativeLayout>

</RelativeLayout>