    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_balance"
        android:background="@color/color_dadada" />


    <RelativeLayout
        android:id="@+id/rl_withdrawals"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/view_1"
        android:layout_marginTop="11dp"
        android:background="@color/colorWhite"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_withdrawals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/ic_withdrawals" />

        <TextView
            android:id="@+id/tv_withdrawals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_withdrawals"
            android:text="提现"
            android:textColor="@color/color_666666"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_back_right_gray" />

    </RelativeLayout>

    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_withdrawals"
        android:background="@color/color_dadada" />


    <RelativeLayout
        android:id="@+id/rl_bill_detailed"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/view_2"
        android:background="@color/colorWhite"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_payment_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/ic_bill_detailed" />

        <TextView
            android:id="@+id/tv_payment_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_payment_record"
            android:text="账单明细"
            android:textColor="@color/color_666666"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_back_right_gray" />

    </RelativeLayout>

    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_bill_detailed"
        android:background="@color/color_dadada" />

</RelativeLayout>